<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_lv_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="title"
            app:layout_constraintStart_toEndOf="@+id/like"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/btn_open_story" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:gravity="center"
            android:background="@android:color/holo_green_light"/>

    <TextView
            android:id="@+id/dislike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:text="2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/like" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:gravity="center"
            android:background="@android:color/holo_red_light"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_chevron_right_black_24"
            android:id="@+id/btn_open_story" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@android:color/transparent"/>

</android.support.constraint.ConstraintLayout>